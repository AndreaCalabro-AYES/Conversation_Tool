# Use a base image with Python 3.9
FROM python:3.9-slim as builder

# Install necessary dependencies
RUN apt-get update && apt-get install -y \
    python3-gpiozero \
    alsa-utils \
    libasound2-dev \
    espeak-ng \
    libportaudio2 \
    libportaudiocpp0 \
    build-essential \
    wget \
    git \
    ninja-build \
    patchelf \
    && apt-get clean

# Set the working directory inside the container
WORKDIR /app

# Install Python dependencies
RUN pip install --no-cache-dir transformers sounddevice numpy gpiozero torch git

# Copy the application code into the working directory
COPY . /app

# Use a non-build stage image with Python 3.9
FROM python:3.9-slim

# Set the working directory inside the container
WORKDIR /app

# Copy the application code from the builder stage
COPY --from=builder /app /app

# Install Python dependencies
RUN pip install --no-cache-dir transformers sounddevice numpy gpiozero torch

# Run the application
CMD ["python", "converse.py"]