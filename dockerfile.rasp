# Use a base image with Python 3.9
FROM python:3.9-slim

# Install necessary dependencies
RUN apt-get update && apt-get install -y \
    python3-gpiozero \
    alsa-utils \
    libasound2-dev \
    espeak-ng \
    libportaudio2 \
    libportaudiocpp0 \
    build-essential \
    wget \
    && apt-get clean

# Set the working directory inside the container
WORKDIR /app

# Install Python dependencies
RUN pip install deepspeech sounddevice numpy gpiozero

# Download DeepSpeech model files
RUN mkdir -p /app/deepspeech-model && \
    wget -O /app/deepspeech-model/deepspeech-0.9.3-model.pbmm https://github.com/mozilla/DeepSpeech/releases/download/v0.9.3/deepspeech-0.9.3-models.pbmm && \
    wget -O /app/deepspeech-model/deepspeech-0.9.3-model.scorer https://github.com/mozilla/DeepSpeech/releases/download/v0.9.3/deepspeech-0.9.3-models.scorer

# Copy the application code into the working directory
COPY . /app

# Run the application
CMD ["python", "converse.py"]
