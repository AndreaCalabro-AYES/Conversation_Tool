# Use a base image with Python 3.9
FROM python:3.9-slim

# Install system dependencies and build tools
RUN apt-get update && apt-get install -y \
    python3-gpiozero \
    alsa-utils \
    libasound2-dev \
    espeak-ng \
    libportaudio2 \
    libportaudiocpp0 \
    build-essential \
    gcc \
    libffi-dev \
    libgfortran5 \
    zlib1g-dev \
    wget \
    && apt-get clean

# Set the working directory inside the container
WORKDIR /app

# Install Vosk using the recommended method from their website
# This ensures that the correct version of libvosk.so is included
RUN pip install vosk

# Install other Python dependencies
RUN pip install pyttsx3
RUN pip install sounddevice

# Copy the application code
COPY . /app

# Ensure libvosk.so is correctly placed in a standard library path
RUN cp /usr/local/lib/python3.9/site-packages/vosk/libvosk.so /usr/lib/

