# Use a base image with Python 3.9
FROM python:3.9-slim

# Install necessary dependencies including build tools for cffi
RUN apt-get update && apt-get install -y \
    python3-gpiozero \
    alsa-utils \
    libasound2-dev \
    libportaudio2 \
    libportaudiocpp0 \
    build-essential \
    libffi-dev \
    gcc \
    python3-dev \
    wget \
    && apt-get clean

# Set the working directory inside the container
WORKDIR /app

# Install Python dependencies including NLTK
RUN pip3 install --no-cache-dir vosk==0.3.42
RUN pip3 install --no-cache-dir sounddevice==0.4.1
RUN pip3 install --no-cache-dir gpiozero==1.6.2
RUN pip3 install --no-cache-dir nltk==3.6.3

# Download NLTK VADER lexicon
RUN python3 -m nltk.downloader vader_lexicon

# Set the LD_LIBRARY_PATH to include the directory where libvosk.so is located
ENV LD_LIBRARY_PATH=/usr/local/lib/python3.9/site-packages/vosk

# Run ldconfig to update the library cache
RUN ldconfig

# Copy the application code into the working directory
COPY . /app

# Run the application
CMD ["python3", "converse.py"]
