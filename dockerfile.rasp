# Use a base image with Python 3.9
FROM python:3.9-slim

# Install necessary dependencies
RUN apt-get update && apt-get install -y \
    python3-gpiozero \
    alsa-utils \
    libasound2-dev \
    espeak-ng \
    libportaudio2 \
    libportaudiocpp0 \
    build-essential \
    wget \
    && apt-get clean

# Set the working directory inside the container
WORKDIR /app

# Install Python dependencies
RUN pip install coqui-stt sounddevice numpy gpiozero

# Download Coqui STT model files
RUN mkdir -p /app/coqui-stt-model && \
    wget -O /app/coqui-stt-model/model.tflite https://coqui.ai/models/v1.0/en/model.tflite && \
    wget -O /app/coqui-stt-model/large_vocabulary.scorer https://coqui.ai/models/v1.0/en/large_vocabulary.scorer

# Copy the application code into the working directory
COPY . /app

# Run the application
CMD ["python", "converse.py"]
