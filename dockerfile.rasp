# Use Debian as the base image
FROM debian:bullseye-slim

# Install necessary system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-gpiozero \
    alsa-utils \
    libasound2-dev \
    libportaudio2 \
    libportaudiocpp0 \
    build-essential \
    libffi-dev \
    gcc \
    python3-dev \
    wget \
    curl \
    git \
    && apt-get clean

# Set the working directory inside the container
WORKDIR /app

# Install Python dependencies with specific versions
RUN pip3 install --no-cache-dir vosk==0.3.42 \
    sounddevice==0.4.1 \
    gpiozero==1.6.2 \
    nltk==3.6.3

# Download NLTK VADER lexicon
RUN python3 -m nltk.downloader vader_lexicon

# Set the LD_LIBRARY_PATH to include the directory where libvosk.so is located
ENV LD_LIBRARY_PATH=/usr/local/lib/python3.9/dist-packages/vosk:$LD_LIBRARY_PATH

# # Copy libvosk.so to the target directory to ensure it's correctly located
# RUN cp /usr/local/lib/python3.9/dist-packages/vosk/libvosk.so /usr/local/lib/python3.9/site-packages/vosk/libvosk.so

# Ensure correct permissions for libvosk.so
RUN chmod 755 /usr/local/lib/python3.9/dist-packages/vosk/libvosk.so

# Run ldconfig to update the linker cache
RUN ldconfig

# Copy the application code into the working directory
COPY . /app

